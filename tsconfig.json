{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true, // Habilita decorators
    "emitDecoratorMetadata": true, // Emite metadata para decorators
    "strictPropertyInitialization": false // Desliga aviso de propriedades não inicializadas (opcional, mas útil para ORMs)
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}